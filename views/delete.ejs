<%- include("partials/header.ejs") %>




<div class="container my-5">
    <h2 class="text-center my-5">Enter the name of the blog you want to delete</h2>
    <form action="/delete/submit" method="POST">
      <div class="input-group flex-nowrap">
        <span class="input-group-text" id="addon-wrapping">Name</span>
        <input type="text" class="form-control" placeholder="Name" aria-label="blogName" aria-describedby="addon-wrapping" name="blogName">
      </div>
      <input class="btn btn btn-outline-secondary my-5" type="submit" value="Delete">
      </form>
    </div>
    
<% if (locals.message) { %>
    <h3 class="text-center my-5"><%= message %></h3>
 
<% } %>
